"--- Enviroment ---
" don't use viminfo file"
set viminfo=

" don't use swap file"
set noswapfile

" don't use backup file"
set nobackup

" setting IME behavior "
set iminsert=0 imsearch=0
inoremap <silent> <ESC> <ESC>

"--- Display ---
set columns=100
set lines=40
"set cmdheight=2
"winpos 758 0

"--- Mouse ---
set mouse=a
set nomousefocus
set mousehide

"--- GUI ---
set guioptions-=T

autocmd FocusGained * set transparency=210
autocmd FocusLost * set transparency=150

"--- Scripts ---
" Save Window Position
let g:save_window_file = expand('~/.vimwinpos')
augroup SaveWindow
  autocmd!
  autocmd VimLeavePre * call s:save_window()
  function! s:save_window()
    let options = [
      \ 'set columns=' . &columns,
      \ 'set lines=' . &lines,
      \ 'winpos ' . getwinposx() . ' ' . getwinposy(),
      \ ]
    call writefile(options, g:save_window_file)
  endfunction
augroup END

if filereadable(g:save_window_file)
  execute 'source' g:save_window_file
endif
