"--- Enviroment ---
" don't use viminfo file"
set viminfo=

" don't use swap file"
set noswapfile

" don't use backup file"
set nobackup

" setting IME behavior "
set iminsert=0 imsearch=0
inoremap <silent> <ESC> <ESC>

set shell=bash.exe

"--- Plugins ---
"singleton.vim
call singleton#enable()
let g:singleton#opener = "drop"

"--- Display ---
set columns=100
set lines=40
"set cmdheight=2
"winpos 758 0

"--- Mouse ---
set mouse=a
set nomousefocus
set mousehide

"--- GUI ---
set guioptions-=T

"--- Scripts ---
" Save Window Position
let g:save_window_file = expand('~/.vimwinpos')
augroup SaveWindow
  autocmd!
  autocmd VimLeavePre * call s:save_window()
  function! s:save_window()
    let options = [
      \ 'set columns=' . &columns,
      \ 'set lines=' . &lines,
      \ 'winpos ' . getwinposx() . ' ' . getwinposy(),
      \ ]
    call writefile(options, g:save_window_file)
  endfunction
augroup END

if filereadable(g:save_window_file)
  execute 'source' g:save_window_file
endif

"--- Local Setting ---
" Write local setting to '~/._gvimrc.local', for example:
" - color scheme
" - enviroment variables.(useful document folder etc...)
if filereadable(expand("~/_gvimrc.local"))
	source ~/_gvimrc.local
endif
